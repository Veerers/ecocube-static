.home
    header
        background-image url(/img/bg_wo_logo.jpg)
        background-position top
        background-size 1000px
        height 620px
        @media xs
            background-size 700px
            position relative
            height 440px
        @media sm
            background-size 1600px
            height 930px
        @media md
            background-size 1010px
            background-position-y -70px
            height 550px
        @media (min-width: 1280px)
            zoom 1.3
        @media (min-width: 1650px)
            zoom 1.5
    .logo-3e
        position absolute
        top 37px
        left 0
        right 260px
        margin auto
        width 130px
        transition opacity .2s
        &:hover
            opacity .7
        @media xs
            top 25px
            right 150px
            clip rect(0px, 70px, 100px, 0px)
        @media sm
            width 195px
            top 61px
            right 460px
        @media md
            right 418px
            width 130px
            top 30px

    .logo-eco
        position absolute
        top 30px
        left 256px
        right 0
        margin auto
        width 200px
        transition opacity .2s
        &:hover
            opacity .7
        @media xs
            left 90px
            top 20px
        @media sm
            width 296px
            top 50px
            left 393px
        @media md
            left 550px
            top 24px
            width 180px
    .link-shape
        item-color = #d3a907
        border-width = 3px
        border-prop = border-width solid white
        line-deg = 45deg
        line-length = 95px
        line-width = 0
        circle-size = 12px
        block-skew = 20deg

        position absolute
        margin auto
        left 0
        right 0
        width 1px

        &.link-shape-1
            top 320px
            left 337px
            line-deg = -145deg
            @media xs
                top 210px
                left 280px
            @media sm
                top 510px
                left 630px
            @media md
                top 250px
                left 400px
            .circle
                top -9px
                left -10px
            .line
                width 110px
                transform rotate(-150deg)
                top -20px
                left -4px
                @media sm
                    width 60px
                @media md
                    width 41px
                    transform rotate(-43deg)
                    top -11px
                    left 4px
            .text-container
                transform skew(block-skew)
                @media md-max
                    top -64px
                    right 67px
                @media sm-max
                    right 110px
                    top -90px
                @media md
                    top -61px
                    left 36px
                    transform skew(-(block-skew))
            .text
                transform skew(-(block-skew))
                @media md
                    transform skew(block-skew)

        &.link-shape-2
            top 437px
            left 182px
            line-length = 70px
            block-skew = -20deg
            @media xs
                top 333px
                left 210px
            @media sm
                top 639px
                left 270px
            @media md
                top 496px
                left 326px
            .line
                width 16px
                transform rotate(58deg)
                top -126px
                left -28px
                @media xs
                    display none
                @media md
                    top -121px
                    width 77px
            .text-container
                top -149px
                transform skew(-(block-skew))
                @media md-max
                    right 30px
                @media md
                    left 15px
                    top -52px
            .text
                transform skew(block-skew)

        &.link-shape-3
            line-deg = 205deg
            line-length = 50px
            block-skew = -20deg
            top 468px
            left -360px
            @media xs
                top 450px
                left -240px
            @media sm
                top 690px
                left -660px
            @media md
                top 410px
                left -400px
            .circle
                @media xs
                    top -65px
                    left 20px
            .line
                width 93px
                transform rotate(-62deg)
                top -11px
                right -99px
                display none
                @media sm
                    display inherit
                @media md
                    transform rotate(-122deg)
                    top -16px
                    right -95px
            .text-container
                text-align right
                top -115px
                transform skew(-(block-skew))
                @media md-max
                    left 31px
                @media md
                    right 60px
                    top -109px
            .text
                transform skew(block-skew)

        .circle
            top (- (circle-size) / 2)
            left (- (circle-size) / 2)
            width circle-size
            height circle-size
            background item-color
            border-radius 50%
            border border-prop
            position absolute

        .line-square
            position absolute

        .line
            @media xs
                display none
            transform-origin 0 9px
            background item-color
            width line-length
            height line-width
            position absolute
            top (-(line-width) / 2);
            border-top border-prop;
            border-bottom border-prop;
            z-index 1

        .text-container
            background item-color
            color white
            padding 3px 10px
            transform-origin: 0 0
            font-size 16px

            border-radius 3px
            border border-prop
            position absolute
            transform skew(-(block-skew))

        .text
            transform skew(block-skew)
            white-space nowrap
    menu
        list-style none
        margin 0
        padding 20px 0

    .menu-container
        margin auto
        width 330px
        padding-left 70px
        @media md-max
            width 740px
            padding-top 60px
        @media xs
            padding-left 70px
            width 300px
        @media sm
            padding-left 50px
        @media md
            width 970px
            padding-left 70px

        clearfix()
        > li
            @media sm
                float left

    .menu-submenu
        padding-top 15px
        width 330px
        font-size 16px
        color #8c6239
        @media xs
            width 230px
        @media md-max
            width 230px
            padding-left 40px
        @media md
            width 300px

        > li
            padding 6px 0 6px 30px
            position relative
            &:before
                position absolute
                left 0
                content 'â€”'

    .menu-label
        font-size 30px
        color #d2ba53
        font-weight bold
        text-transform uppercase
        position relative
        @media sm
            font-size 23px
            text-align center
        @media md
            text-align left
        &:before
            content ''
            position absolute
            left -60px
            top -5px
            display block
            width 48px
            height 44px
            background-image url(/img/icons.png)
            @media sm
                top -50px
                left 0
                right 0
                margin auto
            @media md
                top -5px
                left -60px
                right inherit

        &-business
            &:before
                background-position -48px
        &-news
            &:before
                background-position 48px
    .footer-container
        background white

    footer
        color #ababab
        font-size 13px
        padding 17px 50px
        height 73px
        max-width 1200px
        margin auto
        @media xs
            text-align center
            padding 17px 0

        .copyright
            float left
            @media xs
                float inherit
        .menu-footer
            float right
            padding 0
            margin 0
            @media xs
                float inherit
                margin auto
                position absolute
                right 0
                left 0
                width 250px
            > li
                float left
                padding 0
            img
                max-height 65px
                padding 10px
                &:hover
                    opacity .8
